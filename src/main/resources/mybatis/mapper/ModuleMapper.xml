    <insert id="addModule">
        INSERT INTO
        `module` (
          `name`, `comment`
        )
        VALUES (
          #{name, jdbcType=VARCHAR},
          #{comment, jdbcType=VARCHAR}
        )

    </insert>

    <update id="updateModule">
        UPDATE `module`
        SET `name` = #{name, jdbcType=VARCHAR}, `comment` = #{comment, jdbcType=VARCHAR}
        where `id` = #{id}
    </update>

    <delete id="deleteModuleById">
        DELETE
        FROM `module`
        WHERE `id` = #{id}
    </delete>

    <select id="selectModuleByFuzzyName" resultType="com.sugon.cloud.document.entity.Module">
        SELECT *
        FROM `module`
        WHERE `name` LIKE CONCAT('%', #{moduleName}, '%')
    </select>

    <select id="selectModuleByName" resultType="com.sugon.cloud.document.entity.Module">
        SELECT *
        FROM `module`
        WHERE `name` = #{moduleName}
    </select>

    <select id="selectModules" resultType="com.sugon.cloud.document.entity.Module">
        SELECT *
        FROM `module`
        <where>
            1=1
            <if test="name != null">
               and `name` LIKE CONCAT('%', #{name}, '%')
            </if>
        </where>
    </select>

    <select id="selectModuleNameByName" resultType="java.lang.String">
        SELECT `name`
        FROM `module`
        WHERE `name` = #{moduleName}
    </select>

    <select id="selectModuleNameByNameInOrtherModule" resultType="java.lang.String">
        SELECT `name`
        FROM `module`
        WHERE `name` = #{moduleName} AND `id` != #{id}
    </select>

    <select id="selectModuleById" resultType="com.sugon.cloud.document.entity.Module">
        SELECT *
        FROM `module`
        WHERE `id` = #{id}
    </select>

</mapper>